<header role="banner">
  <div 
    class="relative h-[85vh] flex bg-cover bg-center rounded-b-2xl overflow-hidden before:content-[''] before:absolute before:inset-0 before:bg-gradient-to-b before:from-black/65 before:to-black/85 before:grayscale after:content-[''] after:absolute after:inset-0 after:bg-black after:mix-blend-color"
    style="background-image: url('/public{{ section.backgroundImage.url }}')"
    role="img"
    aria-label="{{ section.backgroundImage.alt or 'Image de fond dÃ©corative' }}"
  >
    <!-- Contenu principal -->
   
    <div class="relative z-10 flex flex-col justify-end h-full p-10 text-left items-start">

      <h1 
        class="font-display text-5xl md:text-6xl tracking-wide text-white mb-4 max-w-[35rem]"
        itemprop="headline"
      >
        {{ section.title }}
      </h1>
      
      <p class="text-neutral-400 mb-6">
        {{ section.subtitle }}
      </p>

      {% if section.button %}
        <a 
          href="{{ section.button.link or '#' }}"
          class="group relative flex items-center text-center rounded-lg bg-yellow-400 text-black py-3 px-3 hover:bg-yellow-300 transition-all duration-300"
          {% if section.button.link.startsWith('http') %}
            rel="noopener noreferrer"
            target="_blank"
          {% endif %}
        >
          <span class="overflow-hidden group-hover:ml-2 max-w-0 opacity-0 group-hover:max-w-xs group-hover:opacity-100 transition-all duration-500 ease-in-out whitespace-nowrap">
            {{ section.button.title }}
          </span>
          
          <svg 
            class="transition-transform duration-300"
            width="24" 
            height="24" 
            viewBox="0 0 24 24" 
            fill="none" 
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path 
              d="M9 18L15 12L9 6" 
              stroke="currentColor" 
              stroke-width="2" 
              stroke-linecap="round" 
              stroke-linejoin="round"
            />
          </svg>
        </a>
      {% endif %}
    </div>
  </div>
</header>