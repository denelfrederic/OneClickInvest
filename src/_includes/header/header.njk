<header class="fixed top-0 left-0 w-full z-50 bg-[#121212]/65 backdrop-blur-lg">
  <div class="max-w-screen-2xl mx-auto px-4 md:px-12 py-3 flex items-center justify-between">
    <!-- Logo -->
    <div class="flex items-center space-x-2">
      <img src="{{ site.header.logo }}" alt="Logo" class="h-8 w-auto hover:scale-105 transition-transform duration-300" />
      <a href="/" class="text-xl font-bold text-white hover:text-gray-300 transition-colors duration-300">
        {{ site.title }}
      </a>
    </div>

    <!-- Navigation links (desktop) -->
    {% if site.header.navigation %}
      <ul role="menubar" class="hidden md:flex space-x-6 text-gray-300">
        {% for link in site.header.navigation %}
          {% set href = '' %}
          {% if link.type == 'internal' %}
            {% set href = link.url %}
          {% elif link.type == 'external' %}
            {% if link.url.startswith('http://') or link.url.startswith('https://') %}
              {% set href = link.url %}
            {% else %}
              {% set href = 'https://' ~ link.url %}
            {% endif %}
          {% elif link.type == 'anchor' %}
            {% set href = '#' ~ link.anchor %}
          {% endif %}
          <li role="none">
            <a role="menuitem" href="{{ href }}" target="{{ link.target | default('_self') }}" class="hover:text-white transition-colors duration-300">
              {{ link.text | default('Lien sans texte') }}
            </a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}

    <!-- Boutons (Contact seulement) - Desktop -->
    <div class="hidden md:flex items-center space-x-4">
      <a href="#sections.founder-section" class="group relative flex items-center rounded-md border border-custom-blue px-4 py-2 text-gray-300 text-sm font-medium hover:bg-custom-blue hover:bg-opacity-90 hover:text-white transition-colors duration-300">
        Contact
      </a>
    </div>
  </div>
</header>

<!-- Menu mobile toggle button -->
<button id="menu-toggle" aria-controls="mobile-menu" aria-expanded="false" aria-label="Toggle mobile menu" class="md:hidden fixed bottom-4 right-4 bg-yellow-400 text-black py-3 px-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-white z-50">
  <svg id="menu-icon" class="h-6 w-6 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
  </svg>
</button>

<!-- Mobile Menu -->
<div id="mobile-menu" class="fixed inset-0 bg-neutral-900 hidden z-40 flex flex-col items-center justify-center space-y-6 p-6">
  {% if site.header.navigation %}
    <ul role="menu" class="w-full flex flex-col items-center space-y-6">
      {% for link in site.header.navigation %}
        {% set href = '' %}
        {% if link.type == 'internal' %}
          {% set href = link.url %}
        {% elif link.type == 'external' %}
          {% if link.url.startswith('http://') or link.url.startswith('https://') %}
            {% set href = link.url %}
          {% else %}
            {% set href = 'https://' ~ link.url %}
          {% endif %}
        {% elif link.type == 'anchor' %}
          {% set href = '#' ~ link.anchor %}
        {% endif %}
        <li role="none">
          <a role="menuitem" href="{{ href }}" target="{{ link.target | default('_self') }}" class="text-white text-2xl hover:text-gray-300 transition-colors duration-300 w-full text-center">
            {{ link.text | default('Lien sans texte') }}
          </a>
        </li>
      {% endfor %}
    </ul>
  {% endif %}

  <!-- Bouton Contact pour Mobile -->
  <div class="flex flex-col items-center space-y-4 w-full mt-6">
    <!-- Bouton Contact -->
    <a href="#sections.founder-section" role="menuitem" class="group relative flex items-center justify-center rounded-lg border border-custom-blue px-6 py-3 text-gray-300 text-xl shadow-lg hover:bg-custom-blue hover:bg-opacity-90 hover:text-white transition-colors duration-300 w-3/4">
      Contact
    </a>

  </div>
</div>

