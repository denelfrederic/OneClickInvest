{% extends "layout.njk" %}

{% block header %}
  {% include "header/header.njk" %}
{% endblock %}

{% block content %}
<main class="w-full px-4">
  {% if page.draft.slug %}
    {% for p in page.draft.slug %}
      {% if p.slug == "home" %}
        {% if p.sections %}
          {% for section in p.sections %}
            <!-- Section principale -->
            <section 
              id="{{ section.__component }}"
              class="w-full 
                {% if section.__component == 'sections.hero-section' %} pb-10
                {% elif section.__component == 'sections.card-section' %}my-16 bg-custom-blue p-10 rounded-3xl	
                {% elif section.__component == 'sections.founder-section' %}my-16 bg-custom-blue p-10 rounded-3xl	
                {% else %}my-32{% endif %}
                max-w-screen-2xl mx-auto">

              {% include "sections/" + section.__component + ".njk" %}
            </section>
          {% endfor %}
        {% else %}
          <p class="text-center text-red-400">Aucune section trouvée.</p>
        {% endif %}
      {% endif %}
    {% endfor %}
  {% else %}
    <p class="text-center text-red-400">Aucune page trouvée.</p>
  {% endif %}
</main>
{% endblock %}
