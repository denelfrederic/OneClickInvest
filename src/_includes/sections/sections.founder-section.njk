          {% for social in section.founders.social %}
            {% if social.social in socialIcons %}
              <a class="flex items-center gap-2 hover:text-white transition underline-offset-4 underline" href="{{ social.link }}" target="_blank">
                {{ socialIcons[social.social] | safe }}
                <span class="text-sm">{% if social.social == 'Email' %}fd@oci.fund{% else %}{{ social.social }}{% endif %}</span>
              </a>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
    
    <!-- Colonne de droite (cartes) - Full width sur mobile, 7/12 sur desktop -->
    <div class="lg:col-span-7 bg-neutral-900 p-6 md:p-9 rounded-2xl flex flex-col justify-between">
      <!-- Contenu en haut -->
      <div class="mb-7">
        <span class="text-sm text-neutral-300">Notre vision</span>
      </div>
      <div>
        <p class="text-neutral-400 mb-6 md:mb-7 text-sm">{{ section.cards.description }}</p>
      </div>
      <div class="flex items-center gap-4 w-full">
        <!-- Formulaire Netlify supprimÃ© -->
      </div>
    </div>
  </div>
</div>
